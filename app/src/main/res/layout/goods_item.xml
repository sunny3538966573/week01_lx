<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_goods_item_bg"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/goods_item_img"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100"
            android:padding="@dimen/dp_5"
            android:layout_margin="@dimen/dp_5"
            fresco:roundAsCircle="false"
            fresco:roundedCornerRadius="@dimen/dp_5"/>

        <TextView
            android:id="@+id/goods_item_title"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="aaaa"
            android:singleLine="true"
            android:textSize="@dimen/sp_14"/>

        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/goods_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12"
                android:textColor="#f00"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/goods_item_shou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="已售80件"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>